{
  "name": "leadflux",
  "version": "1.0.0",
  "description": "LeadFlux - AI-Powered Lead Generation Platform",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"backend,frontend\" -c \"cyan,magenta\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "python -m uvicorn app.api.server:app --host 0.0.0.0 --port 8000 --reload",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "concurrently -n \"backend,frontend\" -c \"cyan,magenta\" \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "python -m uvicorn app.api.server:app --host 0.0.0.0 --port 8000",
    "start:frontend": "cd frontend && npm run start",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "install:backend": "pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install",
    "lint": "cd frontend && npm run lint",
    "setup": "npm run install:all && npm run install:backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.8.0"
  }
}

